<h1>edit helper</h1>

<div class="booyah-box col-10 offset-1">
  <h1>Edit Profile</h1>
  <%= simple_form_for @helper do |f| %>
    <%= f.input :name %>
    <%= f.input :about %>
    <%= f.input :how %>
    <%= f.input :avatar %>
    <br />
    <%= f.submit 'Update', class: 'btn btn-primary' %>
  <% end %>
</div>