<h1 class="underline-words text-center">Chat Room</h1>
<br />


<div class="booyah-box col-10 offset-1">
  <% @messages.each do |message| %>
  <div>

    <!-- message.user_id  -->
    
      <% id = message.user_id %>
      <% @user = User.find(id) %>
      <% if @user.helpee.present? %>
            <% if @user.helpee.avatar.present? %>
               <%= image_tag @user.helpee.avatar %>
            <% else %>
                <%= image_tag "fillerProfile.jpg", class: "chat-pic" %>
            <% end %>
      <% end %>
      <% if @user.helper.present? %>
           <% if @user.helper.avatar.present? %>
                <%= image_tag @user.helper.avatar %>
           <% else %>
                <%= image_tag "fillerProfile.jpg", class: "chat-pic" %>
           <% end %>
     <% end %>

    <strong class="inline-space on-hover" data-toggle="modal" data-target="#myModal">
      
    <%= message.email %>
  
    </strong><%= message.created_at.strftime("%B %e, %Y at %I:%M %p") %></div>
    
    <%= message.body %>
  <% end %>
</div>
</div>

<hr class="col-10 offset-1" />

<div class="col-10 offset-1 text-insert">
<%= simple_form_for @message do |f| %>
  <%= f.input :body %>

  <%= f.submit "Chat!", class: "btn btn-primary" %>
<% end %>
</div>
