<h1>messages</h1>

<% @messages.each do |message| %>
  <div>
    <%= message.body %>
  </div>
<% end %>

<hr />

<%= simple_form_for @message do |f| %>
  <%= f.input :body %>

  <%= f.submit "Chat!" %>
<% end %>

