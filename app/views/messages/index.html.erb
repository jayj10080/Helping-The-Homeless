<br />
<h1 class="underline-words text-center">Chat Room</h1>
<br />


<div class="booyah-box col-10 offset-1">
  <% @messages.each do |message| %>
  
    <div class="row">
      <div class="col-1">
        <% id = message.user_id %>
        <% user = User.find(id) %>
        <% if user.helpee.present? %>
          <% if user.helpee.avatar.present? %>
            <%= image_tag user.helpee.avatar %>
          <% else %>
            <%= image_tag "fillerProfile.jpg", class: "chat-pic" %>
          <% end %>
        <% end %>
        <% if user.helper.present? %>
          <% if user.helper.avatar.present? %>
            <%= image_tag user.helper.avatar %>
          <% else %>
            <%= image_tag "fillerProfile.jpg", class: "chat-pic" %>
          <% end %>
        <% end %>
      </div>
      <div class="col-11 no-margin">
        <strong class="inline-space on-hover" data-toggle="modal" data-target="#myModal">
          <%= message.email %>
        </strong>
        <%= message.created_at.strftime("%B %e, %Y at %I:%M %p") %>
        <br />
        <%= message.body %>
        <div class="clearing"></div>

      </div>
    </div>
  


<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
        <h4 class="chat-name" id="myModalLabel"><%= user.email %></h4>
      </div>

    
      <div class="modal-body">
        

            <div>
              
              
              
              <% if user.helpee.present? %>
                <% if user.helpee.avatar.present? %>
                  <%= image_tag user.helpee.avatar %>
                <% else %>
                  <%= image_tag "fillerProfile.jpg", class: "resize-filler" %>
                <% end %>
              <% end %>
              <% if user.helper.present? %>
                <% if user.helper.avatar.present? %>
                  <%= image_tag user.helper.avatar %>
                <% else %>
                  <%= image_tag "fillerProfile.jpg", class: "resize-filler" %>
                <% end %>
              <% end %>

            </div>

            <%= link_to message.email, conversations_path(sender_id: current_user.id, 
    recipient_id: message.user_id), method: 'post' %>

          
      </div>
    
    </div>
  </div>
</div>

<% end %>
</div>

<hr class="col-10 offset-1" />

<div class="col-10 offset-1 text-insert">
<%= simple_form_for @message do |f| %>
  <%= f.input :body %>

  <%= f.submit "Chat!", class: "btn btn-primary" %>
<% end %>
</div>
