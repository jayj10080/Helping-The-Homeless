    $(document).on("turbolinks:load", function(){
      $(".markerclass").click(function(e) {
      e.preventDefault();
      var markerid = $(this).attr("id").replace("marker", "")
      myClick(markerid);
      });
    });

    function myClick(id){
      $('html, body').animate({ scrollTop: $('#map').offset().top }, 'slow');
        google.maps.event.trigger(marker[id], 'click');
    }

